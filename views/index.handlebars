<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control {{error}}" placeholder="{{hint}}"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-end">
  <div id="sortSelector">
    <div class="dropdown">
      <a class="btn btn-outline-danger dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
        data-bs-toggle="dropdown" aria-expanded="false">
        排序方法{{#if title}}({{title}}){{/if}}
      </a>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <li><a class="dropdown-item" href="/list?keyword={{ keyword }}&sort=name&order=asc&title=A->Z">A to Z</a></li>
        <li><a class="dropdown-item" href="/list?keyword={{ keyword }}&sort=name&order=desc&title=Z->A">Z to A</a>
        </li>
        <li><a class="dropdown-item" href="/list?keyword={{ keyword }}&sort=category&order=asc&title=類別">類別</a></li>
        <li><a class="dropdown-item" href="/list?keyword={{ keyword }}&sort=location&order=asc&title=地區">地區</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="col-9 mx-auto ">
    <div class="d-flex flex-wrap ">
      {{#each restaurants}}
      <div class="col-4 p-3">
        <div class="card">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pl-2"></i> {{this.category}}
            </div>
            <h6><span class="badge bg-danger text-light">{{this.rating}}</span><i
                class="fas fa-star fa-xs text-danger"></i></h6>
          </div>
          <footer class="d-flex justify-content-end bg-light p-2">
            <a href="./restaurants/{{this._id}}/edit"><button class="btn btn-warning btn-sm m-1">Edit</button></a>
            <a href="./restaurants/{{this._id}}"><button class="btn btn-warning btn-sm  m-1">Detail</button></a>
            <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger btn-sm  m-1">Delete</button>
            </form>
          </footer>
        </div>
      </div>{{/each}}
    </div>
  </div>
</div>