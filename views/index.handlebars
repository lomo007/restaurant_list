<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control {{error}}" placeholder="{{hint}}"
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <button class="btn btn-light btn-sm mt-2"><a href="./restaurants/new">新增餐廳</a></button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="col-9 mx-auto">
    <div class="d-flex flex-wrap ">
      {{#each restaurants}}
      <div class="col-4 p-3">
        <div class="card">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name_en}}{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <footer class="d-flex justify-content-end mt-2 bg-dark p-2">
            <a href="" class="badge p-2 mr-2"><span>Edit</span></a>
            <a href="/restaurants/{{this.id}}" class="badge p-2 mr-2"><span>Detail</span></a>
            <button class="btn btn-danger btn-sm">Delete</button>
          </footer>
        </div>
      </div>{{/each}}
    </div>
  </div>
</div>