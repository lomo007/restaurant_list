<div class="row mt-4">
  <div class="col-md-4 m-auto">
    <div class="card card-body p-5">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group mt-2">
          <label for="name" class="mb-2">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}"
            required>
        </div>
        <div class="form-group mt-2">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}"
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
        </div>
        <div class="form-group mt-2">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control"
            placeholder="Enter password (至少6位數密碼)" value="{{password}}" pattern="^(?=.*[0-9]).{6,}$" required>
        </div>
        <div class="form-group mt-2">
          <label for="confirmPassword" class="mb-2">Confirm Password <label id="passwordCondition"></label></label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter Password (至少6位數密碼)" value="{{confirmPassword}}" required
            onkeyup="checkRegisterPassword()">
        </div>
        <button type="submit" id="registerSubmit" class="btn btn-info btn-block col-12 mt-4">register</button>
        <a href="/auth/facebook" class="btn btn-primary col-12 mt-2">Facebook</a>
      </form>
      <p class="lead mt-2">
        Have An Account? <a href="/users/login">login</a>
      </p>
    </div>
  </div>
</div>