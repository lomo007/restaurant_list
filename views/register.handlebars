<div class="row mt-3">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-group mt-2">
          <label for="name" class="mb-2">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="form-group mt-2">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="form-group mt-2">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password"
            value="{{password}}">
        </div>
        <div class="form-group mt-2">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Enter Password" value="{{confirmPassword}}">
        </div>
        <button type="submit" class="btn btn-primary btn-block col-12 mt-3">register</button>
        <a href="/auth/facebook" class="btn btn-info col-12 mt-2">Facebook</a>
      </form>
      <p class="lead mt-2">
        Have An Account? <a href="/users/login">login</a>
      </p>
    </div>
  </div>
</div>